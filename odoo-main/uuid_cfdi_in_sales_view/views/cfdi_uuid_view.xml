<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="sale_order_tree_inherit_folios" model="ir.ui.view">
        <field name="name">sale.order.tree.with.folios</field>
        <field name="model">sale.order</field>
        <!-- hereda la vista de árbol de cotizaciones/pedidos -->
        <field name="inherit_id" ref="sale.view_quotation_tree_with_onboarding"/>
        <field name="arch" type="xml">
            <!-- inserta el campo justo después de la columna 'name' -->
            <xpath expr="//tree/field[@name='state']" position="after">
            <field name="folios_fiscales"/>
          </xpath>
        </field>
    </record>
</odoo>
