<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-inherit="stock_barcode.LineDestinationLocation" t-inherit-mode="extension">
        <xpath expr="//div[@name='destination_location']" position="after">
            <div t-if="env.model.purchaseOrderName">
                <label>Purchase Order Name: <t t-raw="env.model.purchaseOrderName"/></label>
            </div>
            <div t-if="env.model.shippingGuide">
                <label>Shipping Guide: <t t-raw="env.model.shippingGuide"/></label>
            </div>
        </xpath>        
    </t>
</templates>